.container
  max-width 1200px

.mx-auto
  margin-left auto
  margin-right auto

.img-resp
  max-width 100%
  height auto
  vertical-align bottom

.img-reset
  vertical-align bottom

.text-left
  text-align left

.text-right
  text-align right

.text-center
  text-align center

.fs-1
  font-size 2.5 * $font-sizes
.fs-2
  font-size 2 * $font-sizes
.fs-3
  font-size 1.75 * $font-sizes
.fs-4
  font-size 1.5 * $font-sizes
.fs-5
  font-size 1.25 * $font-sizes
.fs-6
  font-size $font-sizes

.m-0
  margin 0 !important
.m-1
  margin 1em !important
.mt-0
  margin-top 0 !important
.mt-1
  margin-top 1em !important
.mb-0
  margin-bottom 0 !important
.mb-1
  margin-top 1em !important
.ml-0
  margin-left 0 !important
.ml-1
  margin-left 1em !important
.mr-0
  margin-right 0 !important
.mr-1
  margin-right 1em !important


